{
  "swagger": "2.0",
  "info": {
    "description": "A web service to keep track of your well being and the things you are grateful for, written in Java using the Spring Framework.",
    "version": "1.0.0",
    "title": "GratitudeJournal",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "user",
      "description": "Operations about users"
    },
    {
      "name": "journal",
      "description": "Operations about journaling"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Creates a new user",
        "operationId": "createUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "NewUser object to create a new User based on its values.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Returns the successfully created User",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Parameters malformed"
          },
          "403": {
            "description": "A user with the same userName already exists"
          }
        }
      }
    },
    "/user/{userName}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get information about a user",
        "operationId": "getUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the requested User Object successfully.",
            "schema": {
              "$ref": "#/definitions/User",
              "description": "The requested User object"
            }
          },
          "400": {
            "description": "Invalid userName supplied"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Removes an already existing user",
        "operationId": "removeUser",
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "User removed successfully"
          },
          "400": {
            "description": "userName malformed"
          },
          "404": {
            "description": "User does not exist"
          }
        }
      },
      "put": {
        "tags": [
          "user"
        ],
        "summary": "Update an existing user",
        "operationId": "updateUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "description": "UpdateUser object to override values of the given User object.",
            "schema": {
              "$ref": "#/definitions/UpdateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the successfully updated User",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Parameters malformed"
          },
          "404": {
            "description": "User does not exist"
          }
        }
      }
    },
    "/journal/{userName}": {
      "get": {
        "tags": [
          "journal"
        ],
        "summary": "Get a list with date:journalEntryId pairs for a user.",
        "operationId": "getEntries",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the requested list of date:journalEntryId pairs successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DateJournalEntryIdPair"
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "tags": [
          "journal"
        ],
        "summary": "Add a journal entry for a user.",
        "operationId": "addEntry",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Entry object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewJournalEntry"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Returns the successfully created JournalEntry",
            "schema": {
              "$ref": "#/definitions/JournalEntry"
            }
          },
          "403": {
            "description": "An entry already exists for today."
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/journal/entry/{journalEntryId}": {
      "get": {
        "tags": [
          "journal"
        ],
        "summary": "Get details about a journal Entry.",
        "operationId": "getEntry",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "journalEntryId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the requested journalEntry successfully",
            "schema": {
              "$ref": "#/definitions/JournalEntry"
            }
          },
          "404": {
            "description": "Entry not found"
          }
        }
      },
      "delete": {
        "tags": [
          "journal"
        ],
        "summary": "Delete a journal entry.",
        "operationId": "deleteEntry",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "journalEntryId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Entry removed successfully"
          },
          "404": {
            "description": "Entry not found"
          }
        }
      },
      "put": {
        "tags": [
          "journal"
        ],
        "summary": "Update a journal entry.",
        "operationId": "updateEntry",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "journalEntryId",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Entry object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewJournalEntry"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the successfully updated JournalEntry object.",
            "schema": {
              "$ref": "#/definitions/JournalEntry"
            }
          },
          "404": {
            "description": "Entry not found"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer",
          "format": "int64"
        },
        "userName": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    },
    "NewUser": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "required": [
        "userName",
        "firstName",
        "lastName"
      ]
    },
    "UpdateUser": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    "JournalEntry": {
      "type": "object",
      "properties": {
        "journalEntryId": {
          "type": "integer",
          "format": "int64"
        },
        "wellBeing": {
          "type": "integer",
          "format": "int64",
          "minimum": 0,
          "maximum": 6
        },
        "gratefulForToday": {
          "type": "string"
        },
        "gratefulForTodayDescription": {
          "type": "string"
        },
        "gratefulForInLife": {
          "type": "string"
        },
        "gratefulForInLifeDescription": {
          "type": "string"
        }
      }
    },
    "NewJournalEntry": {
      "type": "object",
      "properties": {
        "wellBeing": {
          "type": "integer",
          "format": "int64",
          "minimum": 0,
          "maximum": 6
        },
        "gratefulForToday": {
          "type": "string"
        },
        "gratefulForTodayDescription": {
          "type": "string"
        },
        "gratefulForInLife": {
          "type": "string"
        },
        "gratefulForInLifeDescription": {
          "type": "string"
        }
      }
    },
    "DateJournalEntryIdPair": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "journalEntryId": {
          "type": "integer",
          "format": "int64"
        }
      }
    }
  }
}